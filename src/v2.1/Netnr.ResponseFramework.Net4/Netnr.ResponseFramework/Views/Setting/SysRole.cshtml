
@{
    ViewData["Title"] = "角色管理";
}

@{Html.RenderAction("Form", "Inlay", new { tablename = "sysrole", modalsize = 2 });}

<!--模态 表单-->
<div class="modal fade modalautoheight" id="myModalAuth" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">
                    <i class="fa fa-cog orange"></i><span>权限设置</span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!--菜单配置-->
                    <div class="col-md-6 col-sm-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">菜单配置（勾选启用）</div>
                            <div class="panel-body modalscroll">
                                <ul id="navTree" style="overflow:hidden"></ul>
                            </div>
                        </div>
                    </div>
                    <!--菜单功能按钮配置-->
                    <div class="col-md-6 col-sm-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">菜单功能按钮配置（勾选启用）</div>
                            <div class="panel-body modalscroll">
                                <ul id="btnTree"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveAuth" type="button" class="btn btn-primary"><span class="fa fa-save"></span>&nbsp;保存</button>
            </div>
        </div>
    </div>
</div>

@{Html.RenderPartial("_BaseViewPartial");}
