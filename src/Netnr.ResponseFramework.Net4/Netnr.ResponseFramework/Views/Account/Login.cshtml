@{
    ViewData["Title"] = "登录";
}

<link href="/css/account/login.css" rel="stylesheet" />

<div class="row row-top"></div>

<div class="container cc">
    <form onsubmit="return false" id="formLogin">
        <div class="title">netnrf</div>
        <div class="form-group form-group-lg fg fg-user">
            <input type="text" class="form-control" name="SuName" id="username" placeholder="账号" autocomplete="off" value="admin">
        </div>
        <div class="form-group form-group-lg fg fg-pwd">
            <input type="text" class="form-control" name="SuPwd" id="userpwd" placeholder="密码" autocomplete="off" value="admin">
        </div>
        <div class="form-group form-group-lg fg fg-captcha">
            <input type="text" class="form-control" name="captcha" id="captcha" placeholder="验证码" autocomplete="off" maxlength="4">
            <img id="img_captcha" src="/account/captcha?@Guid.NewGuid().ToString()" alt="验证码" title="点击验证码刷新" />
        </div>
        <div class="form-group" id="loginmsg"></div>
        <div class="form-group">
            <label class="remember">
                <input type="checkbox" name="remember" value="1" checked="checked" /> 保持登录状态
            </label>
            <button type="button" id="btnLogin" class="btn btn-info pull-right">登 录</button>
        </div>
        <hr />
        <div class="form-group fastlogin">
            <p>已关联用户 直接登录</p>
            <a href="/account/auth/qq">
                <img src="/images/login/qq.svg" />
            </a>
            <a href="/account/auth/weibo">
                <img src="/images/login/weibo.svg" />
            </a>
            <a href="/account/auth/github">
                <img src="/images/login/github.svg" />
            </a>
            <a href="/account/auth/taobao">
                <img src="/images/login/taobao.svg" />
            </a>
            <a href="/account/auth/microsoft">
                <img src="/images/login/microsoft.svg" />
            </a>
        </div>
    </form>
</div>

<script src="/js/account/login.js"></script>