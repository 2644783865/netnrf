@{
    ViewData["Title"] = "表管理";
}

<style>
    .dropdown-menu li {
        padding: 5px 10px;
    }
</style>

<div class="row mt15">
    <div class="col-sm-12">
        <a href="/tool/resetdatabase" class="btn btn-danger btn-sm" target="_blank">重置数据库</a>
        <hr />
    </div>
    <div class="col-sm-4">
        <div>
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                    生成表配置 <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><button class="btn btn-sm btn-block btn-info" onclick="builder(1)">追加不存在的字段</button></li>
                    <li><button class="btn btn-sm btn-block btn-danger" onclick="builder(2)">覆盖更新</button></li>
                </ul>
            </div>
            <div class="btn-group pull-right">
                <button class="btn btn-success btn-sm" id="btnQuery">查询字典</button>
                <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><button class="btn btn-sm btn-block btn-info" onclick="exportexcel()">导出表设计（Excel）</button></li>
                </ul>
            </div>
        </div>
        <div id="PGrid1" class="mt15">
            <div id="Grid1" class="loadingimg"></div>
        </div>
    </div>
    <div class="col-sm-8">
        <div id="PGrid2">
            <div id="Grid2" class="loadingimg"></div>
        </div>
    </div>
</div>

<script src="/lib/jquery-easyui/ext/datagrid-groupview.js" asp-append-version="true"></script>

<partial name="_BaseViewPartial" />